@model AddtoCart.Models.TBL_PRODUCT

@{
    ViewBag.Title = "addToCart1";
}
<br/>
<br/>
<br/>


@using (Html.BeginForm())
{
<div class="container">
    <div  class="row">
        <div class="col-lg-4 col-md-4 col-sm-4" >

            <img style="min-height:100px;width:auto" src="@Url.Content(Model.PROD_IMAGE)" />
            </div>
        <div class="col-lg-8 col-md-8 col-sm-8">

         <h1> Product Name:@Model.PROD_NAME</h1>
            <h2> Price:@Model.PROD_PRICE</h2>
            <h5>Description:@Model.PROD_DESC</h5>
            <input type="number" name="qty" value="1" id="qty" min="1" max="10"/>
            <input type="submit" value="Submit" class="btn btn-default"/>
        </div>

         
    </div>


</div>
    
}
